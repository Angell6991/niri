    :class "bar-window"
    :stacking "fg" 
    :geometry 
    (geometry 
        :x "6%" 
        :y "10px" 
        :width "5%" 
        :height "30px"
        :anchor "top right"
    )
    (box
        :orientation "v" 
        :spacing "10"           ;;45
        ;:space-evenly "false"   ;;espacio estre widget valor buleano: true รณ false
        (icon-lock)
    )
